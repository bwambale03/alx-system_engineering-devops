#!/usr/bin/env bash
# Script that installs Nginx server

set -euo pipefail

# Update the system
sudo apt update

# Install Nginx
sudo apt install -y nginx

# Configure Nginx
sudo tee /etc/nginx/sites-available/default >/dev/null <<'EOF'
server {
    listen 80 default_server;
    listen [::]:80 default_server;
    root /var/www/html;
    index index.html;
    server_name _;
    location / {
        echo 'Hello World!';
    }
}
EOF

# Restart Nginx
sudo service nginx restart
